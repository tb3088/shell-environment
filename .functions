function min() {
  local flag=()

  while (( $# )); do
    [ -n "$1" ] || { shift; continue; }
#FIXME use getopts
    [[ $1 = -[a-zA-Z] ]] && flag+=($1) || break
    shift
  done
  local IFS=$'\n'
  sort -n "${flag[@]}" "$*" | head -n 1
}

function max() { min -r "$@"; }

