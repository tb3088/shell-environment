function runv() {
  # mimic 'set -x'

  >&2 printf "%s %s\n" `printf '%.0s+' {1..$SHLVL}` "$*"
  [ -n "$NOOP" ] || "$@"
}


function is_interactive() {
  [[ $- =~ i ]] || tty -s || [ -n `tset -q` ]
}


function is_type() {
  # ignore blank arguments. return on first error

  local type
  while [ $# -ne 0 ]; do
    if [ -n "$1" ]; then
	  [[ `declare -p "$1" | awk '{ print $2; }'` =~ ${type:?} ]] || return
	fi
	shift
  done
}

function is_array()   { type=a is_type "$@"; }
function is_hash()    { type=A is_type "$@"; }
function is_int()     { type=i is_type "$@"; }
function is_integer() { type=i is_type "$@"; }
function is_string()  { type='-' is_type "$@"; }


function is_file() {
  # ignore blank arguments. return on first error
  #TODO? hard-fail mode

  while [ $# -ne 0 ]; do
    if [ -n "$1" ]; then
	  [ -f "$1" ] || { log.error "file not found ($1)"; return; }
	fi
    shift
  done
}


