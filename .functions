    ?(to_)@(upper|lower))
            is_function "$format" || return ;&
    *)      use_pipe=1
  esac

  # read STDIN (pipe) if no args
  [ ${use_stdin:-0} -eq 1 ] && set -- $( < /dev/stdin )

  while (( $# )); do
    [ -n "$1" ] || { shift; continue; }
    local -n nref=$1

    if (( ${key_mode:-0} )); then
      LOG_LEVEL=NOTICE is_hash "${!nref}"
      if (( ${use_pipe:-0} )); then printf '%s\n' "${!nref[@]}" | "${format[@]}"
