}


# NOTE if "$file" sources other files, the answer is polluted.
function list_functions() {
  while (( $# )); do
    [ -f "$1" ] || { shift; continue; }

    # use sub-shell to not contaminate current, recurse
    ( source "$1"; $FUNCNAME )
    shift
  done

  ( shopt -s extdebug
    declare -F `compgen -A function` | awk '{ printf("%-25s%s  #%d\n", $1, $3, $2); }'
  )
}
