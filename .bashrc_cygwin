[[ ${OSTYPE:-`uname -o`} == [cC]ygwin ]] || return 0

#Ref: http://cygwin.com/cygwin-ug-net/using-cygwinenv.html
delim='' contains "${CYGWIN:-x}" 'winsymlinks' || CYGWIN+=' winsymlinks:lnk'
# 'nativestrict' would be best but doesn't work in Explorer.
# nothing works in WSL!!

function command_not_found_handle() { cmd.exe /D /C "$@"; }

if which procps &>/dev/null; then
  alias ps='\procps ${PS_ARGS:- -o uid,pid,ppid,stime,etime,cmd}'
else
  alias ps='\ps -f'
fi

shopt -s nocaseglob

