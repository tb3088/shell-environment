#----- header -----
[ "${0##*/}" != "${BASH_SOURCE##*/}" ] || { >&2 echo -e "ERROR\tfile must be sourced ($0)"; return 2; }

# prevent multiple-inclusion
__link=`readlink -f "$BASH_SOURCE"`
declare -n __tag=SOURCE_${__link//[^a-zA-Z0-9_]/}
[ ${__tag:-0} = 0 ] || return 0
__tag=1
#------------------



is_exec openssl && {
#----- openssl -----

function cert.print() {
  local uri=${1:?}; uri=${uri#*://}
  local host=${uri%:*}
  local port=${uri#*:}

  [ "$host" != "$port" ] || port=${2:-443}

#TODO 
  output=`openssl s_client -connect ${host}:${port} < /dev/null`
  [ -n "$output" ] || return

  gawk 'BEGIN { RS="\n---\n"; } NR==2 { print; exit; }' <<< "$output"
  gawk 'BEGIN { RS="\n---\n"; } NR==3 { print; exit; }' <<< "$output" |
      openssl x509 -noout -issuer -dates -subject -serial 2>/dev/null
}

#----- /openssl -----
}

return 0


