#ControlMaster auto
#ControlPath ~/.ssh/sock/PROFILE-%h_%p-%r

host admin.us-east-1a relay.us-east-1*
  Hostname A.B.C.D


host admin.*
  User openvpnas
  LocalForward 1943 0.0.0.0:1943

host gateway.* admin.*
  ProxyCommand none
  IdentityFile ~/.aws/AWS_PROFILE/master.pem
  # 'yes' is more secure but requires pre-populating
  StrictHostKeyChecking ask
  IdentitiesOnly yes

host relay relay.*
  User relay
  StrictHostKeyChecking yes

host *.direct
  ProxyCommand none

host !relay* *.bastion
  ProxyCommand env SSH_CONFIG="${SSH_CONFIG:?}" ssh-wrapper.sh ssh -W %h:%p relay${AWS_REGION:+.$AWS_REGION}.via-bastion

host relay*.via-bastion
  LocalForward 2943 0.0.0.0:1943
  LocalForward 1443 0.0.0.0:443

host *.via-bastion
  ProxyCommand env SSH_CONFIG="$HOME/.aws/${AWS_PROFILE:?}/bastion/${AWS_REGION:?}/config" ssh-wrapper.sh ssh -W %h:%p  relay${AWS_REGION:+.$AWS_REGION}

#---------------

host i-098898b util util.*
  Hostname a.b.c.d
  HostKeyAlias util

#match OriginalHost *.us-east-1a
#  Include ~/.aws/AWS_PROFILE/PROFILE/AWS_REGION/a.conf

#match OriginalHost "?,??,???"
# NOTICE '%n' is not supported, documentation not-withstanding
# consult cloudformation map for region
#  Hostname 172.16.0.%h

#---------------

match User !ec2-user,!ubuntu,!openvpnas,*
  IdentityFile ~/.ssh/id_rsa

host !relay* *
  user ec2-user
  IdentityFile ~/.aws/AWS_PROFILE/lab.pem
  ForwardAgent no
  GatewayPorts no
  # since AWS hosts auto-scale/relaunch 'no' is permissible.
  # recommend use of HostKeyAlias though
  StrictHostKeyChecking no
  ServerAliveInterval 90
  ServerAliveCountMax 3
#TODO rewrite '%h' to key off VPC subnet applicable to AZ
  ProxyCommand env SSH_CONFIG="${SSH_CONFIG:?}" ssh-wrapper.sh ssh -W %h:%p relay${AWS_REGION:+.$AWS_REGION}.direct

