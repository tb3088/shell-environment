# To override the alias instruction use a '\' before it
# eg. \rm will call the real /bin/rm not an alias.

# Interactive operation...
alias rm='\rm -i'
alias mv='\mv -i'

alias df='\df -h'
alias du='\du -hD'

alias grep='\grep --color'

#alias ffs='sudo $(fc -ln -1)'
alias ffs='eval sudo !!'
alias free='\free -m'
alias edit='eval `[ "${TERM%.*}" = "screen" ] && echo screen` ${EDITOR:?}'
alias ps='\ps -o uid,pid,ppid,stime,etime,cmd'

case `uname -o` in
  Cygwin)
	alias ps='\ps -s';
	for dir in USERPROFILE LOCALAPPDATA PROGRAMFILES; do
	  bin=`path2unix "${!dir}"`/7-Zip/7z.exe
	  [ -x "$bin" ] && { alias 7z="run $bin"; break; }
	done
	for dir in USERPROFILE LOCALAPPDATA PROGRAMFILES; do
	  bin=`path2unix "${!dir}"`/Notepad++/notepad++.exe
	  [ -x "$bin" ] && { alias npp="run $bin"; break; }
	done
	unset dir bin
	alias downloads='cd `path2unix "$USERPROFILE"`/Downloads'
	alias workspace='cd `path2unix "$USERPROFILE"`/workspace'
#	alias packer='packer-1.1.1.exe'
	;;
  darwin*)
	#alias subl='open -a "Sublime Text 2"'
	alias bbe='open -a "TextWrangler"'
	alias gvim='open -a "MacVim"'
	alias xc='open -a "Xcode"'
	alias edit='${EDITOR:-open -e}'
	;;
esac

# Some shortcuts for different directory listings
alias ls='\ls -hAF --color=tty'
alias ll='ls -lh'
alias ld='ls -d'
alias lt='ls -t'
alias lS='ls -S'
alias cdu='cd ..'

alias sftp='\sftp -R 256 -B 262144'
alias screen='\screen ${HOSTNAME:+-t ${HOSTNAME%%.*}}'
alias ntpdate='sudo /usr/sbin/ntpd -gq'

alias check-url='\curl -L -s -o /dev/null -w "Connect: %{time_connect} TTFB: %{time_starttransfer} Total time: %{time_total} ReturnCode: %{http_code} Download Size: %{size_download} Speed: %{speed_download} \n"'

alias chef-repo='pushd $REPO_HOME/chef-repo'
alias ops-repo='pushd $REPO_HOME/operations'
alias gsb='git status -sb'
alias gbl='git show-branch --all --list'
alias krf='\knife role from file'
alias ksn='\knife search node'
alias kds='knife data bag show'
alias kde='knife data bag edit'

alias yaml2json="python -c 'import sys, yaml, json; json.dump(yaml.load(sys.stdin), sys.stdout, indent=4)'"

