#TODO how to keep system Ruby from fighting embedded?

for p in puppet{,.bat}; do
    which $p &>/dev/null && return
done

: ${PUPPET_BASE:="${PROGRAMFILES:-/opt}/puppetlabs/puppet"}

for v in PUPPET_BASE; do
    [ -n "${!v}" ] || { unset $v; continue; }
    [ -d "${!v}/bin" ] && addPath "${!v}/bin"
done

