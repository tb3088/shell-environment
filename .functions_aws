is_array __aws_regions &>/dev/null && [ ${#__aws_regions[@]} -ge 16 ] ||
declare -ar __aws_regions=(
    ap-northeast-{1,2}
    ap-south-1
    ap-southeast-{1,2}
    ca-central-1
    eu-central-1
    eu-north-1
    eu-west-{1,2,3}
    sa-east-1
    us-east-{1,2}
    us-west-{1,2}
  )

